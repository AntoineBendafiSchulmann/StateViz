{
  "name": "stateviz",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.13.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter frontend run dev",
    "build": "pnpm -r run build",
